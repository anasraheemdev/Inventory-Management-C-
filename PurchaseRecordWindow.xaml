<Window x:Class="FinalDB.PurchaseRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  xmlns:local="clr-namespace:FinalDB"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="SULTANI POS - Purchase Record" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3672CF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridColumnHeaderStyle}"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F9F9F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D8EDFF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0F2FF"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F0F5FF"/>
            <Setter Property="Foreground" Value="#1E5AAF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E5AAF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3672CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormControlStyle" TargetType="Control">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource FormControlStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource FormControlStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                  IsHitTestVisible="False"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ToggleButton x:Name="toggleButton"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <Path x:Name="arrow"
                                      Fill="#1E5AAF"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Data="M0,0 L4,4 L8,0 Z"
                                      Margin="0,0,10,0"/>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   PopupAnimation="{StaticResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                                <Border x:Name="dropDownBorder"
                                        BorderBrush="#1E5AAF"
                                        BorderThickness="1"
                                        Background="White"
                                        CornerRadius="6"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <ScrollViewer x:Name="ScrollViewer" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Resources>
                            <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="5" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                        </ControlTemplate.Resources>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource FormControlStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid x:Name="PART_Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Grid.Column="0"
                                                   Focusable="True"
                                                   HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                   Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <Button x:Name="PART_Button"
                                    Grid.Column="1"
                                    Focusable="False"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Path Data="M10,4 L6,8 L2,4" Stroke="#1E5AAF" StrokeThickness="2"/>
                            </Button>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                   PopupAnimation="{StaticResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                                <Border x:Name="PART_CalendarBorder"
                                        BorderBrush="#1E5AAF"
                                        BorderThickness="1"
                                        Background="White"
                                        CornerRadius="6"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <Calendar x:Name="PART_Calendar"/>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Resources>
                            <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="5" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                        </ControlTemplate.Resources>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#1E5AAF" BorderBrush="#1648A0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="SULTA" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="NI" FontSize="22" FontWeight="Bold" Foreground="#3CEFFF"/>
                    <TextBlock Text=" POS" FontSize="16" Foreground="#9DC3F5" VerticalAlignment="Bottom" Margin="5,0,0,2"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,20,10,0">
                        <Button Style="{StaticResource MenuButtonStyle}" Click="DashboardButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="CASHIER" Margin="15,20,0,5" Foreground="#9DC3F5" FontSize="12" FontWeight="SemiBold"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="MakeInvoiceButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Make Invoice"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="TransactionButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8FA;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Transaction"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="INVENTORY" Margin="15,20,0,5" Foreground="#9DC3F5" FontSize="12" FontWeight="SemiBold"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="AddProductButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8C9;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Add Item"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ProductsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Products List"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Background="#3672CF" Click="PurchaseRecordButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8FB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Purchase Record"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="StockTrackingButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Stock Tracking"/>
                            </StackPanel>
                        </Button>

                        <Expander Header="More Inventory" Foreground="#9DC3F5" Margin="10,10,0,0"
                                  Background="Transparent" BorderThickness="0">
                            <StackPanel>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="CategoryButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                        <TextBlock Text="Category"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="BrandButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                        <TextBlock Text="Brand"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="UnitsButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                        <TextBlock Text="Units"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="SupplierButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                        <TextBlock Text="Supplier"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="IssuedButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8F3;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                        <TextBlock Text="Issued"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <TextBlock Text="ADMINISTRATION" Margin="15,20,0,5" Foreground="#9DC3F5" FontSize="12" FontWeight="SemiBold"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="AddCashierButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE779;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Add Cashier"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="LoginAsAdminButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE779;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Admin Login"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="LoginPageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Login Page"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="HomeLoginAsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Home (Login As)"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}" Click="EditProductButton_Click" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Edit Product (Example)"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#174B92" BorderBrush="#144283" BorderThickness="0,1,0,0" Padding="15,12">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="36" Height="36" Background="#3CEFFF" CornerRadius="18">
                            <TextBlock Text="AR" Foreground="#0A2D5E" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Anas Raheem" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                            <TextBlock Text="Administrator" FontSize="11" Foreground="#9DC3F5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#F6F9FC">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="PURCHASE RECORD" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="#1E5AAF"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,25,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}" Height="40" Click="NewPurchaseButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="New Purchase"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButtonStyle}" Height="40" Click="ExportButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="25,15,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="18" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="From Date" Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker x:Name="FromDatePicker" Width="150" Style="{StaticResource FormControlStyle}" SelectedDate="{Binding FromDate, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="To Date" Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker x:Name="ToDatePicker" Width="150" Style="{StaticResource FormControlStyle}" SelectedDate="{Binding ToDate, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Supplier" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="SupplierComboBox" Width="200" Style="{StaticResource FormControlStyle}"
                                      ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="0,0,15,0">
                            <TextBlock Text="Status" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="StatusComboBox" Width="150" Style="{StaticResource FormControlStyle}"
                                      ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"/>
                        </StackPanel>

                        <TextBox x:Name="SearchTextBox" Grid.Column="4" Margin="0,20,15,0" Height="32"
                                 VerticalContentAlignment="Center" Padding="8,0"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,20,0,0">
                            <Button x:Name="ApplyFilterButton" Style="{StaticResource PrimaryButtonStyle}"
                                    VerticalAlignment="Bottom" Height="32" Margin="0,0,10,0" Click="ApplyFilterButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Apply Filter"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ClearFiltersButton" Style="{StaticResource SecondaryButtonStyle}"
                                    VerticalAlignment="Bottom" Height="32" Click="ClearFiltersButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Clear Filters"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Grid Grid.Row="1" Grid.ColumnSpan="6" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Total Sales Amount" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding TotalPurchasesAmount}" FontSize="22" FontWeight="Bold" Margin="0,5,0,0" Foreground="#1A1A1A"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Padding="15" Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Total Items Sold" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding TotalItemsPurchased}" FontSize="22" FontWeight="Bold" Margin="0,5,0,0" Foreground="#1A1A1A"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="18">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="PurchaseRecordsDataGrid"
                                  Style="{StaticResource DataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  ItemsSource="{Binding PurchaseRecords}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Invoice ID" Width="100" Binding="{Binding InvoiceId}"/>
                                <DataGridTextColumn Header="Invoice No." Width="120" Binding="{Binding InvoiceNumber}"/>
                                <DataGridTextColumn Header="Date" Width="120" Binding="{Binding InvoiceDate, StringFormat='d'}"/>
                                <DataGridTextColumn Header="Customer Name" Width="*" Binding="{Binding CustomerName}"/>
                                <DataGridTextColumn Header="Total Amount" Width="120" Binding="{Binding TotalAmount, StringFormat='C0'}"/>
                                <DataGridTemplateColumn Header="Status" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}" CornerRadius="4"
                                                    Padding="5,2" HorizontalAlignment="Left" Margin="0,6">
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="12"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Actions" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                                <Button Style="{StaticResource PrimaryButtonStyle}" Padding="10,5" Margin="0,0,5,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE8A0;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0"/>
                                                        <TextBlock Text="View"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Style="{StaticResource SecondaryButtonStyle}" Padding="10,5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Edit"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="Previous" Style="{StaticResource SecondaryButtonStyle}"/>
                            <Button Content="1" Style="{StaticResource PrimaryButtonStyle}" Width="40"/>
                            <Button Content="2" Style="{StaticResource SecondaryButtonStyle}" Width="40"/>
                            <Button Content="3" Style="{StaticResource SecondaryButtonStyle}" Width="40"/>
                            <Button Content="Next" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="3" Style="{StaticResource CardBorderStyle}" Padding="18" Margin="0,15,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="250"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Monthly Sales Trend" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A" Margin="0,0,0,18"/>
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding MonthlyPurchaseSeries}"
                                            AnimationsSpeed="0:0:0.5" Hoverable="True"
                                            Margin="0,10,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Month" Labels="{Binding MonthlyPurchaseLabels}"
                                          Foreground="#6E6E6E" FontSize="12" FontWeight="SemiBold">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" IsEnabled="False"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Sales Amount (Rs.)"
                                          Foreground="#6E6E6E" FontSize="12" FontWeight="SemiBold">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator IsEnabled="True" StrokeDashArray="2"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
