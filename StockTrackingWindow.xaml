<Window x:Class="FinalDB.StockTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stock Tracking" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3672CF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F5FF"/>
                    <Setter Property="Foreground" Value="#1E5AAF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#1E5AAF" BorderBrush="#1648A0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="SULTA" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="NI" FontSize="22" FontWeight="Bold" Foreground="#3CEFFF"/>
                    <TextBlock Text=" POS" FontSize="16" Foreground="#9DC3F5" VerticalAlignment="Bottom" Margin="5,0,0,2"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,20,10,0">
                        <Button Style="{StaticResource MenuButtonStyle}" Background="#3672CF">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="INVENTORY" Margin="15,20,0,5" Foreground="#9DC3F5" FontSize="12" FontWeight="SemiBold"/>

                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8C9;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Add Item"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Category"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Brand"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Units"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8CB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Master Price"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Purchase Order"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Supplier"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8FB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Receive"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F3;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                                <TextBlock Text="Issued"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#174B92" BorderBrush="#144283" BorderThickness="0,1,0,0" Padding="15,12">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="36" Height="36" Background="#3CEFFF" CornerRadius="18">
                            <TextBlock Text="ST" Foreground="#0A2D5E" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Stock Admin" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                            <TextBlock Text="Administrator" FontSize="11" Foreground="#9DC3F5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#F6F9FC">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="STOCK DASHBOARD" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="#1E5AAF"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,25,0">
                        <Border Background="#1E5AAF" BorderBrush="#1648A0" BorderThickness="0" CornerRadius="6" Padding="15,8" Margin="0,0,15,0" Height="42">
                            <TextBlock Text="2024" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="25,15,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,12" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource TabButtonStyle}" Background="#1E5AAF" Foreground="White" FontWeight="SemiBold">
                            <TextBlock Text="General"/>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}" Margin="10,0,0,0">
                            <TextBlock Text="Inventory"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Items" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                <TextBlock Text="1,500" FontSize="22" FontWeight="Bold" Margin="0,5,0,10" Foreground="#1A1A1A"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▲" Foreground="#4CAF50" FontWeight="Bold"/>
                                    <TextBlock Text=" 5% Up from last month" Foreground="#4CAF50" FontSize="12" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1" Width="45" Height="45" Background="#EBF5FF" CornerRadius="22" VerticalAlignment="Top">
                                <TextBlock Text="&#xE8C9;" FontFamily="Segoe MDL2 Assets" Foreground="#1E5AAF" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Items In Stock" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                <TextBlock Text="1,200" FontSize="22" FontWeight="Bold" Margin="0,5,0,10" Foreground="#1A1A1A"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▲" Foreground="#4CAF50" FontWeight="Bold"/>
                                    <TextBlock Text=" 2% Up from last month" Foreground="#4CAF50" FontSize="12" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1" Width="45" Height="45" Background="#E8F5E9" CornerRadius="22" VerticalAlignment="Top">
                                <TextBlock Text="&#xE8EB;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Low Stock Items" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                <TextBlock Text="150" FontSize="22" FontWeight="Bold" Margin="0,5,0,10" Foreground="#1A1A1A"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▼" Foreground="#F44336" FontWeight="Bold"/>
                                    <TextBlock Text=" 10% Down from last month" Foreground="#F44336" FontSize="12" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1" Width="45" Height="45" Background="#FFEBEE" CornerRadius="22" VerticalAlignment="Top">
                                <TextBlock Text="&#xE8F2;" FontFamily="Segoe MDL2 Assets" Foreground="#F44336" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Out of Stock Items" Foreground="#6E6E6E" FontSize="13" FontWeight="Medium"/>
                                <TextBlock Text="50" FontSize="22" FontWeight="Bold" Margin="0,5,0,10" Foreground="#1A1A1A"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▼" Foreground="#F44336" FontWeight="Bold"/>
                                    <TextBlock Text=" 3% Down from last month" Foreground="#F44336" FontSize="12" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1" Width="45" Height="45" Background="#FFEBEE" CornerRadius="22" VerticalAlignment="Top">
                                <TextBlock Text="&#xE10B;" FontFamily="Segoe MDL2 Assets" Foreground="#F44336" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,22,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="18" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="250"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Stock Level Changes" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A"/>

                                <Border Grid.Column="1" Background="#1E5AAF" BorderBrush="#1648A0" BorderThickness="0" CornerRadius="6" Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="This Month" FontSize="13" FontWeight="Medium" Foreground="White"/>
                                        <TextBlock Text="&#xE0E5;" FontFamily="Segoe MDL2 Assets" Margin="6,0,0,0" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="0,18,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="18" Background="White" Margin="0,0,9,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Latest Stock Receipts" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A" Margin="0,0,0,18"/>

                                <StackPanel Grid.Row="1">
                                    </StackPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="18" Background="White" Margin="9,0,9,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Latest Stock Issued" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A" Margin="0,0,0,18"/>

                                <StackPanel Grid.Row="1">
                                    </StackPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Padding="18" Background="White" Margin="9,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Low Stock Items" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A" Margin="0,0,0,18"/>

                                <StackPanel Grid.Row="1">
                                    </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>